<!-- Profile View -->
<div id="profile-view" class="p-6">
	<div class="mb-6">
		<h1 class="text-3xl font-semibold text-gray-800">Personal Information</h1>
		<p class="text-gray-500">Your basic personal details</p>
	</div>

	<div class="grid grid-cols-1 md:grid-cols-1 gap-6">
		<!-- Personal Information Card -->
		<div
			class="bg-white p-6 rounded-md shadow-sm border border-gray-200"
			id="profile-card"
		>
			<div class="flex items-center mb-6">
				<div class="w-20 h-20 bg-gray-200 rounded-full mr-4"></div>
				<div>
					<h3 class="text-xl font-medium" id="profile-name"></h3>
					<p class="text-gray-500" id="profile-department"></p>
				</div>
			</div>

			<!-- View Mode -->
			<div class="space-y-6" id="profile-view-mode">
				<div class="grid grid-cols-2 gap-4">
					<div>
						<label class="block text-sm font-medium text-gray-700"
							>First Name</label
						>
						<div
							class="mt-1 p-2 bg-gray-50 border border-gray-300 rounded-md"
							id="profile-firstname"
						></div>
					</div>
					<div>
						<label class="block text-sm font-medium text-gray-700"
							>Last Name</label
						>
						<div
							class="mt-1 p-2 bg-gray-50 border border-gray-300 rounded-md"
							id="profile-lastname"
						></div>
					</div>
				</div>

				<div>
					<label class="block text-sm font-medium text-gray-700"
						>Email Address</label
					>
					<div class="mt-1 flex">
						<span
							class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500"
							>@</span
						>
						<div
							class="flex-1 p-2 bg-gray-50 border border-gray-300 rounded-r-md"
							id="profile-email"
						></div>
					</div>
				</div>

				<div>
					<label class="block text-sm font-medium text-gray-700"
						>Password</label
					>
					<div class="mt-1 flex">
						<!-- Button toggle -->
						<button
							type="button"
							id="togglePasswordView"
							class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 focus:outline-none"
						>
							<svg
								id="eyeIconView"
								xmlns="http://www.w3.org/2000/svg"
								class="h-5 w-5"
								fill="none"
								viewBox="0 0 24 24"
								stroke="currentColor"
							>
								<path
									id="eyePathView"
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M15 12a3 3 0 11-6 0 3 3 0 016 0z 
                               M2.458 12C3.732 7.943 7.523 5 12 5 
                               c4.478 0 8.268 2.943 9.542 7 
                               -1.274 4.057-5.064 7-9.542 7 
                               -4.477 0-8.268-2.943-9.542-7z"
								/>
							</svg>
						</button>

						<!-- Tempat nampilin password -->
						<div
							id="profile-password"
							class="flex-1 p-2 bg-gray-50 border border-gray-300 rounded-r-md select-text overflow-hidden whitespace-nowrap text-ellipsis"
						>
							********
						</div>
					</div>
				</div>

				<div>
					<label class="block text-sm font-medium text-gray-700"
						>Phone Number</label
					>
					<div class="mt-1 flex">
						<span
							class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500"
						>
							<svg
								xmlns="http://www.w3.org/2000/svg"
								class="h-5 w-5"
								viewBox="0 0 20 20"
								fill="currentColor"
							>
								<path
									d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"
								/>
							</svg>
						</span>
						<div
							class="flex-1 p-2 bg-gray-50 border border-gray-300 rounded-r-md"
							id="profile-phone"
						></div>
					</div>
				</div>
			</div>

			<!-- Edit Mode -->
			<div class="space-y-6 hidden" id="profile-edit-mode">
				<div class="grid grid-cols-2 gap-4">
					<div>
						<label
							for="editFirstName"
							class="block text-sm font-medium text-gray-700"
							>First Name</label
						>
						<input
							type="text"
							id="editFirstName"
							class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm sm:text-sm"
						/>
					</div>
					<div>
						<label
							for="editLastName"
							class="block text-sm font-medium text-gray-700"
							>Last Name</label
						>
						<input
							type="text"
							id="editLastName"
							class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm sm:text-sm"
						/>
					</div>
				</div>

				<div>
					<label for="editEmail" class="block text-sm font-medium text-gray-700"
						>Email Address</label
					>
					<div class="mt-1 flex rounded-md shadow-sm">
						<span
							class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500"
							>@</span
						>
						<input
							type="email"
							id="editEmail"
							class="block w-full px-3 py-2 border border-gray-300 rounded-none rounded-r-md shadow-sm sm:text-sm"
						/>
					</div>
				</div>

				<div>
					<label
						for="editPassword"
						class="block text-sm font-medium text-gray-700"
						>Password</label
					>
					<div class="mt-1 flex rounded-md shadow-sm relative">
						<button
							type="button"
							id="togglePassword"
							class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 focus:outline-none"
						>
							<svg
								id="eyeIcon"
								xmlns="http://www.w3.org/2000/svg"
								class="h-5 w-5"
								fill="none"
								viewBox="0 0 24 24"
								stroke="currentColor"
							>
								<path
									id="eyePath"
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2"
									d="M15 12a3 3 0 11-6 0 3 3 0 016 0z 
                               M2.458 12C3.732 7.943 7.523 5 12 5 
                               c4.478 0 8.268 2.943 9.542 7 
                               -1.274 4.057-5.064 7-9.542 7 
                               -4.477 0-8.268-2.943-9.542-7z"
								/>
							</svg>
						</button>

						<input
							type="password"
							id="editPassword"
							class="flex-1 min-w-0 block w-full px-3 py-2 border border-gray-300 rounded-none rounded-r-md shadow-sm sm:text-sm"
						/>
					</div>
				</div>

				<div>
					<label for="editPhone" class="block text-sm font-medium text-gray-700"
						>Phone Number</label
					>
					<div class="mt-1 flex rounded-md shadow-sm">
						<span
							class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500"
						>
							<svg
								xmlns="http://www.w3.org/2000/svg"
								class="h-5 w-5"
								viewBox="0 0 20 20"
								fill="currentColor"
							>
								<path
									d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"
								/>
							</svg>
						</span>
						<input
							type="tel"
							id="editPhone"
							class="flex-1 min-w-0 block w-full px-3 py-2 border border-gray-300 rounded-none rounded-r-md shadow-sm sm:text-sm"
						/>
					</div>
				</div>

				<div class="flex justify-end space-x-3">
					<button
						type="button"
						id="cancelEditBtn"
						class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50"
					>
						Cancel
					</button>
					<button
						type="button"
						id="saveProfileBtn"
						class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-black hover:bg-gray-800"
					>
						Save
					</button>
				</div>
			</div>

			<div class="flex justify-between mt-5" id="profile-edit-toggle">
				<button
					id="logoutBtn"
					class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700"
				>
					Logout
				</button>

				<button
					id="editProfileBtn"
					class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-black hover:bg-gray-800"
				>
					Edit
				</button>
			</div>
		</div>
	</div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/profile.js"></script>
