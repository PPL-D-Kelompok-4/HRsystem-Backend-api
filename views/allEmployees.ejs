<!-- All Employees View -->
<div id="allEmployeesView" class="p-6 hidden">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-3xl font-semibold text-gray-800">Employees</h1>
            <p class="text-gray-500">
                Manage your employee records and information.
            </p>
        </div>
        <button id="addEmployeeBtn" class="bg-black text-white px-4 py-2 rounded-md">
            Add Employee
        </button>
    </div>

    <div class="flex justify-between mb-4">
        <div class="relative w-96">
            <input type="text" placeholder="Search employees..." id="employeeSearchInput"
                class="w-full pl-3 pr-10 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-black focus:border-black" />
        </div>
        <div class="relative">
            <button id="sortMenuToggle"
                class="flex items-center space-x-1 border border-gray-300 rounded-md px-3 py-2 bg-white">
                <span id="sortLabel">Sort</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd"
                        d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                        clip-rule="evenodd" />
                </svg>
            </button>

            <div id="sortDropdown"
                class="absolute right-0 z-20 mt-1 w-48 bg-white rounded-md shadow-lg border border-gray-200 hidden">
                <div class="py-1">
                    <button data-sort="name-asc"
                        class="sortOption block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Sort
                        by Name (A-Z)</button>
                    <button data-sort="name-desc"
                        class="sortOption block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Sort
                        by Name (Z-A)</button>
                    <button data-sort="id"
                        class="sortOption block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Sort
                        by Employee ID</button>
                </div>
            </div>
        </div>
    </div>

    <div class="bg-white shadow-sm border border-gray-200 overflow-visible">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th scope="col" class="px-3 py-3 text-left">
                        <input type="checkbox"
                            class="rounded border-gray-300 text-black focus:ring-black" />
                    </th>
                    <th scope="col"
                        class="px-1 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Employee ID
                    </th>
                    <th scope="col"
                        class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Name
                    </th>
                    <th scope="col"
                        class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Email
                    </th>
                    <th scope="col"
                        class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Department
                    </th>
                    <th scope="col"
                        class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Position
                    </th>
                    <th scope="col"
                        class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Status
                    </th>
                    <th scope="col"
                        class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-20">
                    </th>
                </tr>
            </thead>
            <tbody id="employeeTableBody" class="bg-white divide-y divide-gray-200">
                <!-- Isi tabel akan diisi lewat JavaScript -->
            </tbody>
        </table>
    </div>

    <div class="flex justify-between items-center mt-4 text-sm text-gray-500">
        <div id="employeeCountText"></div>
        <div class="flex space-x-2">
            <button id="prevPageBtn" class="px-3 py-1 border border-gray-300 rounded-md bg-white">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
            </button>
            <button id="nextPageBtn" class="px-3 py-1 border border-gray-300 rounded-md bg-white">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
            </button>
        </div>
    </div>
</div>

<script src="/js/allEmployees.js"></script>